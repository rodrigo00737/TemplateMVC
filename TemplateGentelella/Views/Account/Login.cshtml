@*@model string*@
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <title>Login</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <link rel="sortcut icon" href="~/Content/img/favicon/icone.ico" type="image/x-icon" />
    <style type="text/css">
        /* CSS used here will be applied after bootstrap.css */

        body {
            /*background: url(../Content/img/login_oficial.png) no-repeat content-box content-box fixed;*/
            /*-webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
            background: linear-gradient(to right, rgb(83, 105, 118), rgb(41, 46, 73));
            display: flex;*/
            display: flex;
            height: 100vh;
            justify-content: center;
            align-items: center;
            text-align: center;
            color: #000;
            background: linear-gradient(to right, rgb(83,105,118), rgb(41,46,7 3));
        }

        .panel-default {
            opacity: 0.9;
            margin-top: 30px;
        }

        .form-group.last {
            margin-bottom: 0px;
        }

        .buttonLogin {
        }

        #divCenter {
            width: 360px;
            height: 150px;
            left: 50%;
            margin: -130px 0 0 -210px;
            padding: 10px;
            top: 40%;
            justify-content: center;
            align-items: center;
            /*position: absolute;
            top: 40%;*/
        }

        #divlogin {
            top: 250px;
        }
    </style>
</head>
<body style="background: linear-gradient(to right, rgb(83, 105, 118), rgb(41, 46, 73));">
    <div class="container">
        <div class="row">
            
            <div class="col-md-4 col-md-offset-4" id="divCenter">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <strong class="">Login</strong>
                    </div>
                    <div class="panel-body">
                        @using (Html.BeginForm("Login", "Account"))
                        {
                            <div class="form-group">
                                <label for="inputEmail3" class="col-sm-3 control-label">Usuário:</label>
                                <div class="col-sm-12">
                                    <input type="text" name="login" class="form-control" id="inputEmail3" placeholder="Usuário" required="">
                                </div>
                            </div>
                            <div class="form-group" style="padding-top:5px">
                                <label for="inputPassword3" class="col-sm-3 control-label">Password:</label>
                                <div class="col-sm-12">
                                    <input type="password" name="senha" class="form-control" id="inputPassword3" placeholder="Password" required="">

                                    @if (ViewBag.Error != null)
                                    {
                                        <p style="color:red">@ViewBag.Error</p>
                                    }
                                </div>
                            </div>
                            <div class="form-group last">
                                <div class="col-sm-offset-3 col-sm-9" style="margin-top:8px">
                                    <button type="submit" class="btn btn-info btn-sm col-sm-8">Login</button>
                                    @*<button type="reset" class="btn btn-default btn-sm">Cancelar</button>*@
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
