                                <button type="button" onclick='window.location = "@Url.Action("Delete", "Paciente", new { id = item.Id })"' class="delete btn btn-danger btn-sm"><span class="glyphicon glyphicon-trash"></span></button>
                                
                                
                                @*@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
