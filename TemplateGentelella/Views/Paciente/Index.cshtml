                                @Html.DisplayFor(modelItem => item.Telefone)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                <button type="button" onclick='window.location = "@Url.Action("Edit", "Paciente", new { id = item.Id })"' class="update btn btn-warning btn-sm"><span class="glyphicon glyphicon-pencil"></span></button>
                                @*@Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "update btn btn-warning btn-sm" })*@
